@model EcertApp.Models.Product
@{
    ViewData["Title"] = "CreateCategory";
}

<div class="row">
    <div class="col-md-6">
        <div class="card white-box p-0 center-block">
            <div class="card-heading">
                <h3 class="box-title mb-0">Add Category</h3>

            </div>
            <div class="card-body">
                <form asp-action="CreateProduct" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input asp-for="ProductName" type="text" class="form-control" name="ProductName" />
                    </div>
                    <div class="form-group">
                        <label for="ProductCode">Product Code:</label>
                        <input asp-for="ProductCode" type="text" class="form-control" name="ProductCode" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryCode">Category Name:</label>
                        <input asp-for="CategoryName" type="text" class="form-control" name="CategoryName" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryCode">Description</label>
                        <input asp-for="Description" type="text" class="form-control" name="Description" />
                    </div> 
                    <div class="form-group">
                        <label for="CategoryCode">Price</label>
                        <input asp-for="Price" type="text" class="form-control" name="Price" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <input asp-for="ImageFile" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="text-center panel-body">
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                        <a asp-action="Categories" class="btn btn-sm btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

