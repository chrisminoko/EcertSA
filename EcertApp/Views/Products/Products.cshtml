@model PagedResult<EcertApp.Models.Product>
@{
    ViewData["Title"] = "Categories";
  
}

<div class="row">

    <br />
    <div class="col-md-12">
        <div class="card white-box p-0">
            <div class="card-heading">
                <h3 class="box-title mb-0">Recent Categories</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 1; }
                            @foreach (var product in Model.Results)
                            {
                            <tr>
                                <td>@product.ProductName</td>
                                <td>
                                    <img src="@("~/image/"+product.ImageName)" asp-append-version="true" alt="" class="img-fluid" />

                                </td>
                                   
                                
                                <td>@product.ProductCode</td>
                                <td>@product.Description</td>
                                <td>@product.Description</td>
                                <td>
                                    <a asp-action="GetCategory" asp-route-id="@product.ProductId">
                                        <img src="/eye.png" />
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="GetCategory" asp-route-id="@product.ProductId">
                                        <img src="/edit.png" />
                                    </a>
                                </td>
                                <td>
                                    <form asp-action="DeleteCategory" method="post">
                                        <input type="hidden" value="@product.ProductId" name="CategoryId" />
                                        <input type="image" src="/remove.png" />
                                    </form>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                    <a asp-action="CreateCategory" class="btn btn-sm btn-secondary">Add</a>
                    <br />
                    <br />
                    @(await Component.InvokeAsync<PagerViewComponent>(Model))
                </div>
            </div>
        </div>
    </div>
</div>

